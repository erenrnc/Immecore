@model IEnumerable<Core.Models.SalaryDto>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	@Html.ActionLink("Create New", "Create", new { peopleId=ViewBag.PeopleId})
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Month)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Total)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Month)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Total)
				</td>
				<td>
					@Html.ActionLink("Edit", "Edit", new { Id=item.Id ,peopleId=item.PeopleId}) |
					@if (ViewContext.HttpContext.User.IsInRole("0"))
					{
						@Html.ActionLink("Delete", "Delete", new { Id=item.Id,peopleId=item.PeopleId})
					}
				</td>
			</tr>
		}
	</tbody>
</table>
<div>
	@Html.ActionLink("Back to Home", "Index","Home")
</div>
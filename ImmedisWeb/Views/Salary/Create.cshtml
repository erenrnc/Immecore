@model Core.Models.SalaryDto

@{
	ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>SalaryDto</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="People.Name" class="control-label"></label>
				<input asp-for="People.Name" class="form-control" readonly />
				<span asp-validation-for="People.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Month" class="control-label"></label>
				<input asp-for="Month" class="form-control" />
				<span asp-validation-for="Month" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Total" class="control-label"></label>
